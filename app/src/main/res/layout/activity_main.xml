  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Spinner
        android:layout_width="@dimen/dialog_fixed_width_minor"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerUserSelectFrom"
        android:text="Select From"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="34dp"
        android:layout_toLeftOf="@+id/editUserenter"
        android:layout_toStartOf="@+id/editUserenter">

    </Spinner>
<Spinner
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/spinnerUserWantTO"
    android:layout_marginTop="40dp"
    android:layout_below="@+id/spinnerUserSelectFrom"
    android:text="Select To"
    android:layout_alignParentLeft="true"
    android:layout_alignRight="@+id/spinnerUserSelectFrom"
    android:layout_alignEnd="@+id/spinnerUserSelectFrom"></Spinner>

    <EditText
        android:id="@+id/editUserenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_alignBottom="@+id/spinnerUserSelectFrom"
        android:layout_alignParentRight="true"

        android:ems="10"/>
     <EditText
         android:id="@+id/et_output"
         android:layout_width="wrap_content"
         android:editable="false"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/spinnerUserWantTO"
         android:layout_alignParentRight="true"
         android:ems="10"/>

        <Button
        android:layout_width="wrap_content"
        android:id="@+id/buttonConvert"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Convert"/>




 </RelativeLayout>
